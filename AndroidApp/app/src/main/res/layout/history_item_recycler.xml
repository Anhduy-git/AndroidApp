<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/order_item"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/list_item"
            android:clickable="true"
            android:orientation="horizontal"
            android:translationY="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/order_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ava_client_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/order_avatar"
                android:orientation="vertical"
                android:translationY="-2dp">

                <TextView

                    android:id="@+id/order_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vu Hoai Nam"
                    android:textColor="@color/main_white"
                    android:textSize="17sp"
                    android:textStyle="bold"></TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20h"
                        android:textColor="@color/main_white"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text=","
                        android:textColor="@color/main_white"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/order_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12-10"
                        android:textColor="@color/main_white"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/order_price"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="599.000 VND"
                    android:textColor="@color/main_white"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/flag_paid"
            android:visibility="gone"
            android:layout_width="17dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/flag_completed"
            android:translationX="-40dp"
            android:translationY="3dp"></View>

        <View
            android:id="@+id/flag_ship"
            android:visibility="gone"
            android:layout_width="17dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/flag_canceled"
            android:translationX="-40dp"
            android:translationY="3dp"></View>
    </RelativeLayout>
</LinearLayout>

