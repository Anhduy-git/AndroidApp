<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_alert_dialog">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Bạn chắc chắn muốn xóa?"
            android:textAlignment="center"
            android:textColor="#AA0E0E"
            android:textSize="17dp"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/abc"
        android:gravity="center_horizontal"
        android:translationY="-20dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_cancel_btn_alert"
            android:text="Hủy"
            android:layout_marginRight="30dp"
            android:textColor="#AA0E0E"></Button>
        <Button
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_delete_btn_alert"
            android:text="Xóa"
            android:textColor="@color/main_white"></Button>
    </LinearLayout>
</RelativeLayout>