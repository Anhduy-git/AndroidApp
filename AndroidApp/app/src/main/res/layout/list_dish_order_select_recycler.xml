<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/menu_item"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/list_item"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:ignore="ExtraText">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/dish_pic_view"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ava_menu_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/dish_pic_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Com chien duong chau"
                android:textColor="@color/main_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"></TextView>

            <TextView

                android:id="@+id/dish_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49.000 VND"
                android:textColor="@color/main_white"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"></TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>