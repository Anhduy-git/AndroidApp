<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderInfo1Activity"
    android:background="@color/main_color"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ball_detail"></View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ball_detail"></View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="90dp"
            android:background="@drawable/ball_detail"></View>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_info_1_back_btn"
            android:layout_width="@dimen/size_btn"
            android:layout_height="@dimen/size_btn"
            android:layout_centerVertical="true"
            android:background="@color/main_color"
            android:drawableStart="@drawable/back_btn"
            android:paddingLeft="8dp"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Information"
            android:textColor="@color/main_white"
            android:textSize="19sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"></TextView>
    </LinearLayout>
    <View
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="205dp"
        android:background="@drawable/ball_detail"
        android:translationZ="1dp"></View>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/box_info"
            ></View>

        <io.alterac.blurkit.BlurLayout
            android:id="@+id/blur_layout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_margin="4dp"
            app:blk_blurRadius="7"
            app:blk_cornerRadius="30dp"
            app:blk_fps="0"></io.alterac.blurkit.BlurLayout>

            <LinearLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/order_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ava_client_default"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vu Hoai Nam"
                        android:textSize="20sp"
                        android:textColor="@color/main_white"
                        android:layout_marginBottom="1dp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="012345678"
                        android:textColor="@color/main_white"
                        android:layout_marginBottom="1dp"
                        android:textSize="16sp"></TextView>
                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Vo Van Kiet - P5 - Q5"
                        android:textSize="16sp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@color/main_white"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: "
                            android:textColor="@color/main_white"
                            android:textSize="16sp"></TextView>
                        <TextView
                            android:id="@+id/order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12h30"
                            android:textColor="@color/main_white"
                            android:textSize="16sp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day: "
                            android:textColor="@color/main_white"
                            android:textSize="16sp"
                            android:layout_marginLeft="30dp"></TextView>
                        <TextView
                            android:id="@+id/order_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5-11"
                            android:textSize="16sp"
                            android:textColor="@color/main_white"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total price:"
                android:textColor="@color/main_white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/bg_info"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/order_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="599.000"
                    android:textColor="@color/main_white"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND"
                    android:textColor="@color/main_white"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="60dp"
        android:padding="10dp"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid:"
                android:textColor="@color/main_white"
                android:textSize="20sp"></TextView>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_checkbox"
                android:gravity="center">
<!--                <ImageView-->
<!--                    android:id="@+id/confirm_ship_btn"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:background="@drawable/check_icon"></ImageView>-->

                <CheckBox
                    android:id="@+id/order_ship_checkbox"
                    android:button="@drawable/confirm_check_box"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/order_ship_btn"
            android:background="@drawable/bg_remove_ship_btn"
            android:text="Remove"
            android:textAllCaps="false"
            android:textColor="@color/main_white"
            android:textSize="22dp"></Button>

        <Button
            android:id="@+id/order_ship_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_ship_btn"
            android:text="Ship"
            android:textAllCaps="false"
            android:textColor="@color/main_white"
            android:textSize="22dp"></Button>
    </RelativeLayout>
</RelativeLayout>

