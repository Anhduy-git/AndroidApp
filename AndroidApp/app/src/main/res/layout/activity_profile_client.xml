<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileClientActivity"


    android:background="@color/main_color"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/profile_back_btn"
            android:layout_width="@dimen/size_btn"
            android:layout_height="@dimen/size_btn"
            android:layout_centerVertical="true"
            android:background="@color/main_color"
            android:drawableStart="@drawable/back_btn"
            android:paddingLeft="8dp"></Button>

        <Button
            android:id="@+id/profile_modify_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_modify"
            android:text="Modify"
            android:textAllCaps="false"
            android:textColor="@color/main_white"
            android:textSize="17sp"></Button>
    </RelativeLayout>

    <View
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ball_detail"></View>
    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/ball_detail"
        android:layout_marginTop="170dp"
        android:layout_alignParentRight="true"></View>

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/blur_layout"
        android:translationY="50dp"
        android:background="@drawable/ball_detail"></View>

    <View
        android:layout_width="310dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/box_info"
        ></View>

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blur_layout"
        android:layout_width="305dp"
        android:layout_height="265dp"
        android:layout_centerInParent="true"
        app:blk_blurRadius="7"
        app:blk_cornerRadius="30dp"
        app:blk_fps="0"></io.alterac.blurkit.BlurLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_avatar"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_alignTop="@+id/blur_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ava_client_default"
        android:translationY="-100dp" />

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:translationY="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/main_white"
            android:textSize="18sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/bg_info"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Vu Hoai Nam"
                android:textColor="@color/main_white"
                android:textSize="16sp"></TextView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number:"
            android:textColor="@color/main_white"
            android:textSize="18sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/bg_info"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="012345678"
                android:textColor="@color/main_white"
                android:textSize="16sp"></TextView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="@color/main_white"
            android:textSize="18sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/bg_info"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/client_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1223 Le Hong Phong"
                android:textColor="@color/main_white"
                android:textSize="16sp"></TextView>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/blur_layout"
        android:translationY="30dp"
        android:background="@drawable/ball_detail"></View>

    <Button
        android:layout_width="288dp"
        android:layout_height="54dp"
        android:layout_alignBottom="@+id/blur_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/remove_btn"
        android:text="REMOVE"
        android:textColor="@color/main_white"
        android:textSize="20dp"
        android:translationY="100dp"
        android:translationZ="1dp"></Button>
</RelativeLayout>