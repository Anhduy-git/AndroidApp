<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_fragment.activity.NewClientActivity"
    android:background="@color/main_color">

    <View
        android:layout_width="700dp"
        android:layout_height="300dp"
        android:background="@drawable/big_ball_top"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_trans_bg"
                android:drawableStart="@drawable/back_btn"></Button>
        </RelativeLayout>

        <Button
            android:id="@+id/add_client_info_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_add"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textColor="@color/main_white"
            android:textSize="17dp"
            android:translationX="-3dp"
            android:translationY="4dp"
            android:translationZ="1dp"></Button>

        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignBottom="@+id/blur_layout"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ball_detail"
            android:translationY="-60dp"></View>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/blur_layout"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ball_detail"
            android:translationX="70dp"
            android:translationY="30dp"></View>

        <View
            android:layout_width="310dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            android:background="@drawable/box_info"
            android:translationY="-40dp"></View>

        <io.alterac.blurkit.BlurLayout
            android:id="@+id/blur_layout"
            android:layout_width="305dp"
            android:layout_height="265dp"
            android:layout_centerInParent="true"
            android:translationY="-40dp"
            app:blk_blurRadius="12"
            app:blk_cornerRadius="30dp"
            app:blk_fps="0"></io.alterac.blurkit.BlurLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/client_avatar"
            android:layout_width="167dp"
            android:layout_height="167dp"
            android:layout_alignTop="@+id/blur_layout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ava_edit"
            android:translationY="-140dp" />

        <Button
            android:id="@+id/btn_client_gallery"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/client_avatar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_lib_btn"
            android:drawableTop="@drawable/lib_icon"
            android:paddingTop="8dp"
            android:translationX="60dp"
            android:translationY="-12dp" />

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:translationY="-15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng:"
                android:textColor="@color/main_white"
                android:textSize="17sp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/bg_info"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/add_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_input_transparent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/main_white"
                    android:textSize="16sp"></EditText>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textColor="@color/main_white"
                android:textSize="17sp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/bg_info"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/add_client_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:background="@drawable/bg_input_transparent"
                    android:inputType="number"
                    android:maxLines="1"

                    android:textColor="@color/main_white"
                    android:textSize="16sp"></EditText>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textColor="@color/main_white"
                android:textSize="17sp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/bg_info"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/add_client_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:background="@drawable/bg_input_transparent"
                    android:inputType="text"
                    android:maxLines="1"

                    android:textColor="@color/main_white"
                    android:textSize="16sp"></EditText>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@+id/blur_layout"
            android:layout_alignParentRight="true"
            android:background="@drawable/ball_detail"
            android:translationX="-70dp"
            android:translationY="-1dp"></View>

    </RelativeLayout>
</RelativeLayout>