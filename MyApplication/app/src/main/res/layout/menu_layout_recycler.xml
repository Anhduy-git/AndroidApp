<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/list_item"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ava_client"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ava_menu_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/ava_client"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Com chien duong chau"
                android:textColor="@color/main_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49.000 VND"
                android:textColor="@color/main_white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"></TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>